{
  "name": "vinyl-filter-by-file",
  "version": "1.0.1",
  "description": "Filter a vinyl file stream based on .gitignore-like files",
  "main": "build/index.js",
  "repository": "https://github.com/jGleitz/vinyl-filter-by-file",
  "scripts": {
    "build": "rm -rf build coverage && babel *.js -d build --source-maps",
    "lint": "eslint *.js",
    "prepublish": "npm run build",
    "unittest": "mocha build/test.js",
    "coverage": "npm run build && nyc  -r=lcovonly -r=html -r=text -- npm run unittest",
    "test": "npm run lint && npm run coverage"
  },
  "keywords": [
    "vinyl",
    "gulpplugin",
    "gitignore",
    "ignore",
    "filter"
  ],
  "author": "Joshua Gleitze",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.0.0",
    "event-stream": "^3.3.4",
    "gulp": "^3.9.1",
    "mkdirp-promise": "^5.0.1",
    "mocha": "^5.0.4",
    "nyc": "^12.0.2",
    "promisify-node": "^0.5.0",
    "tmp": "^0.0.33"
  },
  "dependencies": {
    "gulp-util": "^3.0.8",
    "ignore": "^5.0.0",
    "through2": "^2.0.3"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "nyc": {
    "exclude": [
      "build/test.js"
    ]
  }
}
